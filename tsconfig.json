{
  "ts-node": {
    "transpileOnly": true,
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ES2017",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "outDir": "./build/",
    "rootDir": "./src/",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@App/Env": ["./src/core/loadEnv"],
      "@App/common": ["./src/common"],
      "@App/exports": ["./src/exports"],
      "@Controllers/*": ["./src/controllers/*"],
      "@Middlewares/*": ["./src/middlewares/*"],
      "@Models/*": ["./src/models/*"],
      "@Utils/*": ["./src/utils/*"]
    }
  }
}
